{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus data source",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "gauge", "name": "Gauge", "version": "" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" }
  ],
  "annotations": { "list": [] },
  "description": "agent-bom AI/MCP security scan dashboard â€” vulnerability blast radius, KEV findings, per-agent risk",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [
    {
      "title": "agent-bom GitHub",
      "url": "https://github.com/msaad00/agent-bom",
      "icon": "external link",
      "type": "link",
      "targetBlank": true
    }
  ],
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Agents Discovered",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "blue" },
          "mappings": [],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_agents_total",
          "legendFormat": "Agents"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "MCP Servers",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "purple" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "purple", "value": null }] }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_mcp_servers_total",
          "legendFormat": "MCP Servers"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Packages Scanned",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "green" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_packages_total",
          "legendFormat": "Packages"
        }
      ]
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Total Vulnerabilities",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "sum(agent_bom_vulnerabilities_total)",
          "legendFormat": "Vulns"
        }
      ]
    },
    {
      "id": 5,
      "type": "stat",
      "title": "CISA KEV Findings",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_kev_findings_total",
          "legendFormat": "KEV"
        }
      ]
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Fixable Vulnerabilities",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "semi-dark-green" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_fixable_vulnerabilities_total",
          "legendFormat": "Fixable"
        }
      ]
    },
    {
      "id": 10,
      "type": "bargauge",
      "title": "Vulnerability Severity Breakdown",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 3 },
              { "color": "red", "value": 5 }
            ]
          },
          "color": { "mode": "thresholds" },
          "min": 0
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_vulnerabilities_total{severity=\"critical\"}",
          "legendFormat": "Critical"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_vulnerabilities_total{severity=\"high\"}",
          "legendFormat": "High"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_vulnerabilities_total{severity=\"medium\"}",
          "legendFormat": "Medium"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_vulnerabilities_total{severity=\"low\"}",
          "legendFormat": "Low"
        }
      ]
    },
    {
      "id": 11,
      "type": "bargauge",
      "title": "Credentials Exposed per Agent",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          },
          "color": { "mode": "thresholds" },
          "min": 0
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_credentials_exposed_total",
          "legendFormat": "{{agent}}"
        }
      ]
    },
    {
      "id": 20,
      "type": "table",
      "title": "Blast Radius â€” Top Vulnerabilities",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 12 },
      "options": {
        "sortBy": [{ "displayName": "Blast Score", "desc": true }],
        "footer": { "show": false }
      },
      "fieldConfig": {
        "defaults": { "custom": { "align": "auto" } },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Blast Score" },
            "properties": [
              { "id": "custom.width", "value": 110 },
              { "id": "thresholds", "value": {
                "mode": "absolute",
                "steps": [
                  { "color": "green", "value": null },
                  { "color": "yellow", "value": 3 },
                  { "color": "orange", "value": 6 },
                  { "color": "red", "value": 8 }
                ]
              }},
              { "id": "custom.displayMode", "value": "color-background" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "KEV" },
            "properties": [
              { "id": "custom.width", "value": 60 },
              { "id": "mappings", "value": [
                { "type": "value", "options": { "1": { "text": "ðŸ”¥ YES", "color": "red" } } },
                { "type": "value", "options": { "0": { "text": "â€”", "color": "gray" } } }
              ]}
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Fixable" },
            "properties": [
              { "id": "custom.width", "value": 80 },
              { "id": "mappings", "value": [
                { "type": "value", "options": { "1": { "text": "âœ“ Yes", "color": "green" } } },
                { "type": "value", "options": { "0": { "text": "âœ— No", "color": "red" } } }
              ]}
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "labelsToFields",
          "options": { "mode": "rows" }
        },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "vuln_id": "Vuln ID",
              "package": "Package",
              "version": "Version",
              "severity": "Severity",
              "ecosystem": "Ecosystem",
              "kev": "KEV",
              "fixable": "Fixable",
              "Value": "Blast Score"
            }
          }
        }
      ],
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_blast_radius_score",
          "legendFormat": "{{vuln_id}} / {{package}}@{{version}}",
          "instant": true,
          "format": "table"
        }
      ]
    },
    {
      "id": 30,
      "type": "timeseries",
      "title": "Vulnerability Count Over Time (by Severity)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "critical" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "high" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "medium" }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "low" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] }
        ]
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "agent_bom_vulnerabilities_total",
          "legendFormat": "{{severity}}"
        }
      ]
    },
    {
      "id": 31,
      "type": "timeseries",
      "title": "Blast Radius Score Over Time (top findings)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 30 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "fieldConfig": {
        "defaults": {
          "custom": { "lineWidth": 2, "fillOpacity": 5 },
          "min": 0,
          "max": 10
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "topk(10, agent_bom_blast_radius_score)",
          "legendFormat": "{{vuln_id}} / {{package}}"
        }
      ]
    },
    {
      "id": 40,
      "type": "gauge",
      "title": "Per-Agent Vulnerability Risk",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 38 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 3 },
              { "color": "red", "value": 5 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "sum by (agent) (agent_bom_agent_vulnerabilities_total)",
          "legendFormat": "{{agent}}"
        }
      ]
    },
    {
      "id": 41,
      "type": "gauge",
      "title": "Max Blast Radius Score",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 38 },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 10,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 4 },
              { "color": "orange", "value": 7 },
              { "color": "red", "value": 9 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "max(agent_bom_blast_radius_score)",
          "legendFormat": "Max Score"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "tags": ["agent-bom", "security", "ai", "mcp", "sbom"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "includeAll": false,
        "label": "Agent",
        "multi": true,
        "name": "agent",
        "options": [],
        "query": {
          "query": "label_values(agent_bom_credentials_exposed_total, agent)",
          "refId": "StandardVariableQuery"
        },
        "refresh": 2,
        "sort": 0,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-7d", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "agent-bom Security Dashboard",
  "uid": "agent-bom-security",
  "version": 1
}
